{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ],
    "allowSyntheticDefaultImports": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "paths": {
      "@components/*": ["components/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}

